<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <!-- First Fragment (Bio, labeled Biography) -->
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.aboutme.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <!-- Action to navigate to SecondFragment (Hobbies) -->
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

        <!-- Action to navigate to ThirdFragment (Contact) -->
        <action
            android:id="@+id/action_FirstFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment" />
    </fragment>

    <!-- Second Fragment (Hobbies) -->
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.aboutme.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <!-- Action to navigate back to FirstFragment (Biography) -->
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <!-- Third Fragment (Contact) -->
    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.aboutme.ThirdFragment"
        android:label="@string/third_fragment_label"
        tools:layout="@layout/fragment_third" />

</navigation>

